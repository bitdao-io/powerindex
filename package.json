{
  "name": "powerswap",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn run compile && yarn run typechain",
    "clean": "buidler clean",
    "compile": "buidler compile",
    "coverage": "buidler coverage --show-stack-traces --solcoverjs ./.solcover.js --network coverage --temp artifacts --testfiles \"./test/**/*.js\"",
    "lint:sol": "solhint --config ./.solhint.json \"contracts/**/*.sol\"",
    "lint:js": "eslint --config .eslintrc.json --ignore-path ./.eslintignore --ext .js .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:sol": "prettier --config .prettierrc --write \"contracts/**/*.sol\"",
    "test": "mocha --timeout 20000"
  },
  "dependencies": {
    "@nomiclabs/buidler-ethers": "^2.0.2",
    "@openzeppelin/buidler-upgrades": "^1.2.1",
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/truffle-upgrades": "^1.2.1",
    "@openzeppelin/upgrades": "^2.8.0",
    "@truffle/hdwallet-provider": "^1.1.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "ethers": "^5.0.18",
    "lodash": "^4.17.20",
    "p-iteration": "^1.1.8",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.60",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "web3": "1.3.0"
  },
  "devDependencies": {
    "@ethersproject/abstract-signer": "^5.0.1",
    "@ethersproject/bignumber": "^5.0.3",
    "@nomiclabs/buidler": "^1.4.4",
    "@nomiclabs/buidler-ganache": "^1.3.3",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.3",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/contract": "^4.2.26",
    "buidler-contract-sizer": "^1.0.0",
    "buidler-gas-reporter": "^0.1.3",
    "mocha": "^8.0.1",
    "solidity-coverage": "^0.7.11",
    "typechain": "^4.0.0"
  }
}
